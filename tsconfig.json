{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsx": "preserve",
        "jsxImportSource": "react",
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"],
            "@constants/*": ["src/constants/*"]
        }
    }
}
